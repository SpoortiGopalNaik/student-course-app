<h2 style="text-align:center;">Login</h2>

<% if (error) { %>
  <p style="color:red; text-align:center;"><%= error %></p>
<% } %>

<form action="/login" method="post" style="max-width:420px; margin:0 auto; display:flex; flex-direction:column; gap:10px;">
  <input type="email" name="email" placeholder="Email" required style="padding:8px;">
  <input type="password" name="password" placeholder="Password" required style="padding:8px;">
  <button class="btn btn-primary" type="submit">Login</button>
  <p style="text-align:center; margin-top:8px;">Don't have an account? <a href="/register">Register</a></p>
</form>
